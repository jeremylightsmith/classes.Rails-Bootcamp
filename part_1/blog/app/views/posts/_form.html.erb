<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name, "Your Name" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>
