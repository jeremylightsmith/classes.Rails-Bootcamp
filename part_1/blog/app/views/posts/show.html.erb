<p>
  <b>Name:</b>
  <%=h @post.name %>
</p>

<p>
  <b>Title:</b>
  <%=h @post.title %>
</p>

<p>
  <b>Content:</b>
  <%=h @post.content %>
</p>

<h1>Comments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th>Post</th>
  </tr>

<% @post.comments.each do |comment| %>
  <tr>
    <td><%=h comment.name %></td>
    <td><%=h comment.content %></td>
    <td><%=h comment.post_id %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New comment', new_comment_path(:post_id => @post) %>

