<h1><%= @list.name %></h1>
<p><%= link_to "edit", edit_list_path(@list) %></p>


<% @list.tasks.each do |task| %>
  <div>
    <%= link_to check_box_tag(nil), task, :method => :delete %>
    <%= task.name %>
  </div>
<% end %>
<div>
  <% form_for @list.tasks.build do |f| %>
    <%= f.text_field :name %>
    <%= f.hidden_field :list_id %>
    <%= f.submit "Add" %>
  <% end %>
</div>